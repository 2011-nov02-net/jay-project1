@model Aqua.Library.Location

@{
    ViewData["Title"] = "Details";
}

<h1>Current Location</h1>

<div>
    <h4>@Model.City</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
    <h4>Inventory</h4>
    <p>
        <a asp-action="ImportAnimal" asp-route-id="@Model.Id">Import new animal</a>
    </p>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @await Html.PartialAsync("_InventoryDetails", Model.Inventory)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
