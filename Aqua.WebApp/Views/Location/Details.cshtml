@model Aqua.Library.Location

@{
    ViewData["Title"] = "Details";
}

<h1>Current Location</h1>

<div>
    <h4>@Model.City</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
    <h4>
        @Html.DisplayNameFor(model => model.Inventory)
    </h4>
    <p>
        <a asp-action="ImportAnimal" asp-route-id="@Model.Id" >Import new animal</a>
    </p>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Quantity
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Inventory)
                    {
                        <tr>
                            <td>
                                @item.AnimalName
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
